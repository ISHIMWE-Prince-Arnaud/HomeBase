generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

model Payment {
  id          Int      @id @default(autoincrement())
  fromUserId  Int
  toUserId    Int
  amount      Int
  householdId Int
  createdAt   DateTime @default(now())

  fromUser  User      @relation("PaymentsMade", fields: [fromUserId], references: [id])
  toUser    User      @relation("PaymentsReceived", fields: [toUserId], references: [id])
  household Household @relation(fields: [householdId], references: [id])
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  password    String
  name        String
  householdId Int?
  household   Household? @relation(fields: [householdId], references: [id])

  // Relations
  assignedChores   Chore[]              @relation("AssignedChores")
  paidExpenses     Expense[]            @relation("PaidExpenses")
  expenseShares    ExpenseParticipant[]
  addedNeeds       HouseholdNeed[]      @relation("AddedNeeds")
  purchasedNeeds   HouseholdNeed[]      @relation("PurchasedNeeds")
  paymentsMade     Payment[]            @relation("PaymentsMade")
  paymentsReceived Payment[]            @relation("PaymentsReceived")
}

model Household {
  id         Int     @id @default(autoincrement())
  name       String
  inviteCode String? @unique

  users    User[]
  chores   Chore[]
  expenses Expense[]
  needs    HouseholdNeed[]
  payments Payment[]
}

model Chore {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime? @default(dbgenerated("(now() + interval '1 day')"))
  isComplete  Boolean   @default(false)

  householdId Int
  household   Household @relation(fields: [householdId], references: [id])

  assignedToId Int?
  assignedTo   User? @relation("AssignedChores", fields: [assignedToId], references: [id])
}

model Expense {
  id          Int       @id @default(autoincrement())
  description String
  totalAmount Float
  date        DateTime? @default(now())

  paidById Int
  paidBy   User @relation("PaidExpenses", fields: [paidById], references: [id])

  householdId Int
  household   Household @relation(fields: [householdId], references: [id])

  participants ExpenseParticipant[]
}

model ExpenseParticipant {
  id Int @id @default(autoincrement())

  expenseId Int
  expense   Expense @relation(fields: [expenseId], references: [id])

  userId Int
  user   User @relation(fields: [userId], references: [id])

  shareAmount Float
}

model HouseholdNeed {
  id          Int      @id @default(autoincrement())
  name        String
  quantity    String?
  category    String?
  isPurchased Boolean  @default(false)
  createdAt   DateTime @default(now())

  householdId Int
  household   Household @relation(fields: [householdId], references: [id])

  addedById Int
  addedBy   User @relation("AddedNeeds", fields: [addedById], references: [id])

  purchasedAt   DateTime?
  purchasedById Int?
  purchasedBy   User?     @relation("PurchasedNeeds", fields: [purchasedById], references: [id])
}
